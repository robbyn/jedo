<mapping>
   <class name="org.tastefuljava.gianadda.domain.Folder">
      <id>
         <property name="id" column="ID" />
      </id>
      <property name="name" column="NAME" />
      <load>
         <parameter value="id" />
SELECT * FROM folders WHERE ID=?
      </load>
      <query name="subfolders">
         <parameter value="#0.id" />
SELECT * FROM folders WHERE PARENT_ID=?
      </query>
      <query name="rootFolder">
         <parameter value="#0" />
SELECT * FROM folders WHERE PARENT_ID IS NULL AND NAME=?
      </query>
      <query name="subfolder">
         <parameter value="#1.id" />
         <parameter value="#3" />
SELECT * FROM folders WHERE PARENT_ID=? AND NAME=?
      </query>
   </class>
</mapping>
